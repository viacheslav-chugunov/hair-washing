<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".structure.fragment.SetupFragment">

    <ImageButton
        android:id="@+id/hair_type_button"
        style="@style/Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/time_range_button"
        style="@style/Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hair_type_button"
        app:layout_constraintEnd_toStartOf="@+id/hair_length_button"
        app:layout_constraintStart_toEndOf="@+id/hair_type_button"
        app:layout_constraintTop_toTopOf="@+id/hair_type_button" />

    <ImageButton
        android:id="@+id/hair_length_button"
        style="@style/Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hair_type_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/hair_type_button"
        app:layout_constraintTop_toTopOf="@+id/hair_type_button" />

    <TextView
        android:id="@+id/hair_type_text_view"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/hair_type_button"
        app:layout_constraintStart_toStartOf="@+id/hair_type_button"
        app:layout_constraintTop_toBottomOf="@+id/hair_type_button" />

    <TextView
        android:id="@+id/time_range_text_view"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/time_range_button"
        app:layout_constraintStart_toStartOf="@+id/time_range_button"
        app:layout_constraintTop_toBottomOf="@+id/time_range_button" />

    <TextView
        android:id="@+id/hair_length_text_view"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/hair_length_button"
        app:layout_constraintStart_toStartOf="@+id/hair_length_button"
        app:layout_constraintTop_toBottomOf="@+id/hair_length_button" />
</androidx.constraintlayout.widget.ConstraintLayout>